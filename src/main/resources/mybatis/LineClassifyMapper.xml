<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.kafka_test.dao.LineClassifyDao">

    <select id="classifyByParentId" parameterType="com.example.kafka_test.pojo.query.LineClassifyQuery" resultType="com.example.kafka_test.pojo.LineClassify">
        select *
        from train_card.line_classify
        where  parent_id=#{parentId} and del=0 order by index
    </select>

    <delete id="deleteUserById" parameterType="int">
        delete from train_card.line_classify where id=#{id}
    </delete>

</mapper>